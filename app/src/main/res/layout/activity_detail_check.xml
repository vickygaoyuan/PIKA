<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.vickygao.masproject.DetailCheckActivity"
    android:id="@+id/relativelayout">


    <TextView
        android:layout_marginTop="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="32dp"
        android:text="Order Details"
        android:id="@+id/title"
        android:textColor="@color/primary"
        android:layout_alignParentTop="true"
        />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/title"
        android:layout_marginTop="24dp"
        android:background="@android:color/darker_gray"/>

    <TextView
        android:textSize="18dp"
        android:layout_marginTop="48dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Item:"
        android:id="@+id/textView5"
        android:textColor="@color/primary"
        android:layout_below="@+id/title"
        />

    <TextView
        android:textSize="18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculator"
        android:id="@+id/detailItem"
        android:layout_alignTop="@+id/textView5"
        android:layout_centerHorizontal="true" />

    <TextView
        android:textSize="18dp"
        android:layout_marginTop="18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status:"
        android:textColor="@color/primary"
        android:id="@+id/textView6"
        android:layout_below="@+id/textView5"
        android:layout_alignParentStart="true" />

    <TextView
        android:textSize="18dp"
        android:layout_marginTop="18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Matching"
        android:id="@+id/detailStatus"
        android:layout_below="@+id/detailItem"
        android:layout_alignStart="@+id/detailItem" />

    <TextView
        android:textSize="18dp"
        android:layout_marginTop="18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Expected Deliver Time:"
        android:textColor="@color/primary"
        android:id="@+id/textView7"
        android:layout_below="@+id/detailStatus"
        android:layout_alignParentStart="true" />

    <TextView
        android:textSize="18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10:00pm, Mar 26, 2015"
        android:id="@+id/detailTime"
        android:layout_alignTop="@+id/textView7"
        android:layout_alignStart="@+id/detailStatus" />

    <TextView
        android:textSize="18dp"
        android:layout_marginTop="18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pickup Address:"
        android:textColor="@color/primary"
        android:id="@+id/textView8"
        android:layout_below="@+id/detailTime"
        android:layout_alignParentStart="true" />

    <TextView
        android:textSize="18dp"
        android:layout_marginTop="18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="800W Marietta Street, NW Atlanta"
        android:id="@+id/detailPickupa"
        android:layout_below="@+id/detailTime"
        android:layout_alignStart="@+id/detailTime" />

    <TextView
        android:textSize="18dp"
        android:layout_marginTop="18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="251 10th Street, Atlanta"
        android:id="@+id/detailDelivera"
        android:layout_below="@+id/detailPickupa"
        android:layout_alignStart="@+id/detailPickupa" />

    <TextView
        android:textSize="18dp"
        android:layout_marginTop="18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Deliver Address:"
        android:textColor="@color/primary"
        android:id="@+id/textView10"
        android:layout_below="@+id/textView8"
        android:layout_alignParentStart="true" />

    <TextView
        android:textSize="18dp"
        android:layout_marginTop="18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fee:"
        android:textColor="@color/primary"
        android:id="@+id/textView9"
        android:layout_below="@+id/detailDelivera"
        android:layout_alignParentStart="true" />

    <TextView
        android:textSize="18dp"
        android:layout_marginTop="18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$10"
        android:id="@+id/detailFee"
        android:layout_below="@+id/detailDelivera"
        android:layout_alignStart="@+id/detailDelivera" />

    <TextView
        android:textSize="18dp"
        android:layout_marginTop="18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Driver:"
        android:textColor="@color/primary"
        android:id="@+id/textView11"
        android:layout_below="@+id/textView9"
        android:layout_alignParentStart="true" />

    <TextView
        android:textSize="18dp"
        android:layout_marginTop="18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="N/A"
        android:id="@+id/detailDriver"
        android:layout_below="@+id/detailFee"
        android:layout_alignStart="@+id/detailFee" />

    <TextView
        android:layout_marginTop="18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="N/A"
        android:id="@+id/detailDriverp"
        android:layout_below="@+id/detailDriver"
        android:layout_alignStart="@+id/detailDriver" />

    <TextView
        android:textSize="18dp"
        android:layout_marginTop="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Driver&apos;s Phone Num:"
        android:textColor="@color/primary"
        android:id="@+id/textView12"
        android:layout_below="@+id/textView11"
        android:layout_alignParentStart="true" />

    <TextView
        android:textSize="18dp"
        android:layout_marginTop="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Giver:"
        android:textColor="@color/primary"
        android:id="@+id/textView13"
        android:layout_below="@+id/detailDriverp"
        android:layout_alignParentStart="true" />

    <TextView
        android:textSize="18dp"
        android:layout_marginTop="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ari"
        android:id="@+id/detailGiver"
        android:layout_below="@+id/detailDriverp"
        android:layout_alignStart="@+id/detailDriverp" />

    <TextView
        android:textSize="18dp"
        android:layout_marginTop="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Giver&apos;s Phone Num:"
        android:textColor="@color/primary"
        android:id="@+id/textView14"
        android:layout_below="@+id/textView13"
        android:layout_alignParentStart="true" />

    <TextView
        android:textSize="18dp"
        android:layout_marginTop="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="444-444-4444"
        android:id="@+id/detailGivern"
        android:layout_below="@+id/detailGiver"
        android:layout_alignStart="@+id/detailGiver" />

</RelativeLayout>
